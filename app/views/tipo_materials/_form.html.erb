<%= form_for(@tipo_material) do |f| %>
<% if @tipo_material.errors.any? %>
<div id="error_explanation">
    <table style="background-color:#FF9595;border:solid 5px #d9534f;margin-left:150px">
        <tr>
        <td>
        <h2>Hubo <%= pluralize(@tipo_material.errors.count, "error") %> error(es) al agregar el nuevo tipo de material:</h2>

        <ul>
            <% @tipo_material.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
</div>
</td>
</tr>
</table>
<% end %>

<div class="form-group">
                <%= f.label :nombre %>
            <%= f.text_field :nombre,maxlength:50, :class => "form-control" %>
    </div>
<div class="actions">
    <%= f.submit "Aceptar", :class => "btn btn-primary" %>
</div>
<% end %>
