<%= form_for(@detalle_compra) do |f| %>
<% if @detalle_compra.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@detalle_compra.errors.count, "error") %> prohibited this detalle_compra from being saved:</h2>

    <ul>
        <% @detalle_compra.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="form-group">
                <%= f.label :cantidad_compra %>
            <%= f.number_field :cantidad_compra, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :precio_unidad_compra %>
            <%= f.number_field :precio_unidad_compra, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :total_compra %>
            <%= f.number_field :total_compra, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :fecha_vencimiento_lote %>
            <%= f.date_select :fecha_vencimiento_lote, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :material_id %>
            <%= f.collection_select :material_id, Material.all, :id, :nombre, prompt: true, :class => 'form-control'  %>
    </div>
<div class="form-group">
                <%= f.label :tipo_contenedor_id %>
            <%= f.collection_select :tipo_contenedor_id, TipoContenedor.all, :id, :nombre, prompt: true, :class => 'form-control'  %>
    </div>

<div class="actions">
    <%= f.submit :class => "btn btn-success" %>
</div>
<% end %>
