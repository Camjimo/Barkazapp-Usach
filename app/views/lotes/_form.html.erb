<%= form_for(@lote) do |f| %>
<% if @lote.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@lote.errors.count, "error") %> prohibited this lote from being saved:</h2>

    <ul>
        <% @lote.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<table style="margin:0 auto">
   <tr>
<div class="form-group">
<td width="150px">
                <%= f.label :material_id %>
                </td>
                <td>
            <%= @lote.material.nombre  %>
            </td>
    </div>
    </tr>
    <tr><td colspan="2">&nbsp</td></tr>
    <tr>
<div class="form-group">
<td>
                <%= f.label :stock_actual_bodega %>
                </td>
                <td>
            <%= @lote.stock_actual_bodega %> <%= @lote.unidad_medida.simbolo %>
            </td>
    </div>
    </tr>
    <tr><td colspan="2">&nbsp</td></tr>
    <tr>
<div class="form-group">
<td>
                <%= f.label :stock_actual_cocina %>
                </td>
                <td>
            <%= f.number_field :stock_actual_cocina,:in => 0..99999, :class => "form-control" %>
            </td>
    </div>
    </tr>
    <tr><td colspan="2">&nbsp</td></tr>
    <tr>
<div class="form-group">
<td>
                <%= f.label :stock_actual_bar %>
                </td>
                <td>
            <%= f.number_field :stock_actual_bar,:in => 0..99999, :class => "form-control" %>
            </td>
    </div>
    </tr>
    <tr><td colspan="2">&nbsp</td></tr>
    <tr>
    </table>

<table style="margin-left:450px">
<tr>
<td>
<% if @lote.stock_actual_bodega>0 %>
<div class="actions">
    <%= f.submit 'Actualizar', :class => "btn btn-primary" %>
</div>
<% end %>
</td>
<td>
<%= link_to 'Cancelar', lotes_path, :class => "btn btn-primary" %>
</td>
</tr>
</table>
<% end %>
