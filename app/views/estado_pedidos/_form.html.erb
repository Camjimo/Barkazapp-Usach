<%= form_for(@estado_pedido) do |f| %>
<% if @estado_pedido.errors.any? %>
<div id="error_explanation">
<table style="background-color:#FF9595;border:solid 5px #d9534f;margin-left:150px">
<tr>
<td>
    <h2>Hubo <%= pluralize(@estado_pedido.errors.count, "error") %> error(es) al agregar el nuevo estado de pedido:</h2>

    <ul>
        <% @estado_pedido.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
</td>
</tr>
</table>
<% end %>
<div class="form-group">
                <%= f.label :nombre %>
            <%= f.text_field :nombre, :class => "form-control" %>
    </div>
<div class="actions">
    <%= f.submit "Ingresar nuevo estado de pedido", :class => "btn btn-primary" %>
</div>
<% end %>
