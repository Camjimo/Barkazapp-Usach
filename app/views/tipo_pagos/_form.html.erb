<%= form_for(@tipo_pago) do |f| %>
<% if @tipo_pago.errors.any? %>
<div id="error_explanation">
<table style="background-color:#FF9595;border:solid 5px #d9534f;margin-left:150px">
<tr>
<td>
    <h2>Hubo <%= pluralize(@tipo_pago.errors.count, "error") %> error(es) al agregar un nuevo tipo de pago:</h2>

    <ul>
        <% @tipo_pago.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
</td>
</tr>
</table>
<% end %>

<div class="form-group">
                <%= f.label :nombre %>
            <%= f.text_field :nombre, :class => "form-control" %>

    </div>
<div class="actions">
    <%= f.submit "Ingresar nuevo tipo de pago", :class => "btn btn-primary" %>
</div>
<% end %>
