<h1>Listing productos</h1>
<p></p>
<hr>

<%= link_to 'New Producto', new_producto_path, :class => "btn btn-primary float-right" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tipo</th>
      <th>Precio</th>
      <th>Actual</th>
      <th>Costo</th>
      <th></th>
      <!-- <th></th>
      <th></th> -->
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
                    <td><%= producto.nombre %></td>
                    <td><%= producto.tipo %></td>
                    <td><%= producto.precio %></td>
                    <td><%= producto.actual %></td>
                    <td><%= producto.costo %></td>
                <td><%= link_to 'Detail', producto %></td>
        <!-- <td><%= link_to 'Edit', edit_producto_path(producto) %></td>
        <td><%= link_to 'Destroy', producto, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

