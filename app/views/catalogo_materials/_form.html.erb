                <%= f.label :precio_material %>
            <%= f.number_field :precio_material, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :material_id %>
            <%= f.collection_select :material_id, Material.all, :id, :name, prompt: true, :class => 'form-control'  %>
    </div>
<div class="form-group">
                <%= f.label :unidad_medida_id %>
            <%= f.collection_select :unidad_medida_id, UnidadMedida.all, :id, :name, prompt: true, :class => 'form-control'  %>
    </div>
<div class="form-group">
                <%= f.label :proveedor_id %>
            <%= f.collection_select :proveedor_id, Proveedor.all, :id, :name, prompt: true, :class => 'form-control'  %>
    </div>
