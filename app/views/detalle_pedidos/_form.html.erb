                <%= f.label :precio_venta %>
            <%= f.number_field :precio_venta, :class => "form-control" %>
    </div>
<div class="form-group">
                <%= f.label :pedido_id %>
            <%= f.collection_select :pedido_id, Pedido.all, :id, :name, prompt: true, :class => 'form-control'  %>
    </div>
<div class="form-group">
                <%= f.label :producto_id %>
            <%= f.collection_select :producto_id, Producto.all, :id, :name, prompt: true, :class => 'form-control'  %>
    </div>
