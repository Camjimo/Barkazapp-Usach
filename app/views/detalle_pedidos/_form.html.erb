<%= form_for(@detalle_pedido) do |f| %>
<% if @detalle_pedido.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(@detalle_pedido.errors.count, "error") %> prohibited this detalle_pedido from being saved:</h2>

    <ul>
        <% @detalle_pedido.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="form-group">
                <%= f.label :cantidad_venta %>
            <%= f.number_field :cantidad_venta, :class => "form-control" %>
